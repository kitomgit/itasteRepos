<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="CustomWindowTitleBackground">
       <item name="android:background">#F88E30</item>
</style>
    <style name="top_bar" parent="android:Theme">
     <item name="android:windowTitleSize">50dp</item>
     <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
</style>
    
    

    <style name="map_icon_image_style">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">63dp</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="transluocent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">?color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- true背景灰色 false背景白色 -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

  
	<style name="dialogStyle"> 
		<item name="android:windowBackground">?android:color/transparent</item> 
		<item name="android:windowFrame">@null</item> 
		<item name="android:windowNoTitle">true</item> 
		<item name="android:windowIsFloating">true</item> 
		<item name="android:windowIsTranslucent">true</item> 
		<item name="android:windowContentOverlay">@null</item> 
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item> 
		<item name="android:backgroundDimEnabled">true</item> 
	</style> 
	<style name="textwhite" >
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:background">#00000000</item>
	</style>
	<style name="textgreen" >
	    <item name="android:textColor">#36D107</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:background">#00000000</item>
	</style>
	<style name="textblock" >
	    <item name="android:textColor">#000000</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:singleLine">false</item>
	    <item name="android:background">#00000000</item>
	</style>
	<style name="listViewItem" parent="textwhite">
	    <item name="android:background">@drawable/half_alpha_bg</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:gravity">fill_vertical</item>
	    <item name="android:orientation">horizontal</item>
	    <item name="android:unselectedAlpha">0.6</item>
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:paddingLeft">2dp</item>
	</style>
	<style name="lightgreybtn">
	    <item name="android:background">@drawable/light_green_btn</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textSize">12sp</item>
	</style>
	<style name="orangebg">
	    <item name="android:background">@drawable/button_corner</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textSize">14sp</item>
	</style>
	
	 <!-- select -->
    <style name="select_style">
    <item name="android:background">@drawable/orange_jianbian_bg</item>
    <item name="android:paddingLeft">5dip</item>
    </style>
	

</resources>
