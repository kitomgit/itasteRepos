<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:padding="2dp"
    android:gravity="center"
    android:background="@drawable/muwen254"
    >
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/half_alpha_bg" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="搜fac提示"
            android:textColor="#697B4E"
            android:textSize="18sp"
             />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:singleLine="false"
            android:text="搜fac提示内容 dsdsfsdf"
            android:textColor="#683612" 
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/cancel"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/half_alpha_bg"
            android:gravity="center"
            android:text="@string/_cancel"
            android:textColor="#697B4E"/>

        <Button
            android:id="@+id/ensure"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/half_alpha_bg"
            android:gravity="center"
            android:text="@string/button_ok"
            android:textColor="#F88E30" />
    </RelativeLayout>

</LinearLayout>