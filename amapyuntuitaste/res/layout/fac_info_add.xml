<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="30dp"
    android:orientation="horizontal"
    android:id="@+id/add_dialog"
    android:windowSoftInputMode="stateHidden" 
    android:background="@drawable/left_bg"
    tools:context=".FacInfoAddActivity" >
     <LinearLayout
         	android:layout_height="100dp"
            android:layout_width="match_parent"
            android:orientation="vertical" 
            >
    <HorizontalScrollView
        android:visibility="gone"
        android:id="@+id/imageshowscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@drawable/border_corner"
         >
        <LinearLayout
            android:id="@+id/picregion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
          
        <ImageView 
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/add_image_icon"
        android:clickable="true"
        android:onClick="addfacpic"
        />
       
        </LinearLayout>
    </HorizontalScrollView>

    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:gravity="center_vertical"
    style="@style/listViewItem"
    >
    <TextView
        android:id="@+id/nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_name" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:ems="8" />

	</LinearLayout>
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/listViewItem"
    >
    <TextView
        android:id="@+id/addresstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_address" />

    <EditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:ems="8" />

	</LinearLayout>
	
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    style="@style/listViewItem"
    >
    <TextView
        android:id="@+id/phonetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_mobile" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:phoneNumber="true"
        android:ems="8" />

	</LinearLayout>
	
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/listViewItem"
    >
    <TextView
        android:id="@+id/heighttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_height" />

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:inputType="number"
        android:ems="8" />

	</LinearLayout>
    
	 
    
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/listViewItem"
    >
    <TextView
        android:id="@+id/areatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_area" />

    <EditText
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:inputType="number"
        android:ems="8" >
    </EditText>
   </LinearLayout>
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/listViewItem"
    >
    <TextView
        android:id="@+id/sushetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_sushe_area" />

    <EditText
        android:id="@+id/sushe_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:inputType="number"
        android:ems="8" >
    </EditText>
   </LinearLayout>


    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:gravity="center_vertical"
    style="@style/listViewItem"
    >

    <TextView
        android:id="@+id/pricetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_price" />

    <EditText
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:inputType="number"
        android:ems="8" />
    </LinearLayout>
    
	
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/listViewItem"
    >
    <TextView
        android:id="@+id/regiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_region" />
      <EditText
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:ems="8" />

   <Button
       android:id="@+id/regionbtn"
       android:layout_width="40dp"
       android:layout_height="25dp"
       style="@style/orangebg"
       android:text="@string/_choose"
       android:onClick="chooseCondition" />

    </LinearLayout>
   
     <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    style="@style/listViewItem"
    >

    <TextView
        android:id="@+id/floortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_floor" />

    <EditText
        android:id="@+id/floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:inputType="number"
        android:ems="8" />

   <Button
        android:id="@+id/floorbtn"
        android:layout_width="40dp"
        android:layout_height="25dp"
        style="@style/orangebg"
        android:text="@string/_choose"
        android:onClick="chooseCondition"
       />
    </LinearLayout>
 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/listViewItem"
    >
    <TextView
        android:id="@+id/peidiantext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_peidian" />

    <EditText
        android:id="@+id/peidian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:ems="8" />

   <Button
       android:id="@+id/peidianbtn"
        android:layout_width="40dp"
        android:layout_height="25dp"
        style="@style/orangebg"
        android:text="@string/_choose"
        android:onClick="chooseCondition"
       />
	</LinearLayout>
	
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/listViewItem"
    >
    <TextView
        android:id="@+id/structtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_struct" />
    
  <EditText
        android:id="@+id/struct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:ems="8" />
   <Button
        android:id="@+id/structbtn"
        android:layout_width="40dp"
        android:layout_height="25dp"
        style="@style/orangebg"
        android:text="@string/_choose"
        android:onClick="chooseCondition"
       />
    </LinearLayout>
 
 
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/listViewItem"
    >
    <TextView
        android:id="@+id/qqcodetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_qq_code" />

    <EditText
        android:id="@+id/qqcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:inputType="number"
        android:ems="8" />

	</LinearLayout>
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:paddingLeft="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/listViewItem"
    >
    <TextView
        android:id="@+id/weixintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:text="@string/_weinxin_code" />

    <EditText
        android:id="@+id/weinxin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textblock"
        android:ems="8" />

	</LinearLayout>
	
	

	 <RelativeLayout
	     android:layout_marginTop="8dp"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal" >

	     <Button
	         android:id="@+id/cancelBtn"
	         style="@style/lightgreybtn"
	         android:layout_width="60dp"
	         android:layout_height="32dp"
	         android:layout_alignParentRight="true"
	         android:layout_alignParentTop="true"
	         android:layout_marginRight="92dp"
	         android:onClick="cancelBtnClickHandler"
	         android:text="@string/_cancel"
	         android:textColor="@color/white" />

	     <Button
	         android:id="@+id/addBtn"
	         style="@style/lightgreybtn"
	         android:layout_width="60dp"
	         android:layout_height="32dp"
	         android:layout_alignParentTop="true"
	         android:layout_marginRight="47dp"
	         android:layout_toLeftOf="@+id/cancelBtn"
	         android:onClick="addFacInfoClickHandler"
	         android:text="@string/_add"
	         android:textColor="@color/white" />

	 </RelativeLayout>
    </LinearLayout>
</ScrollView>
