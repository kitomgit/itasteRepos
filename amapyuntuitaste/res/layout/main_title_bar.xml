<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/scrollmenu"
    android:scrollbars="none"
    >
    <LinearLayout 
            android:id="@+id/tab_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >
		  <Button
                android:id="@+id/menuBtn"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_corner"
                android:textColor="@color/white"
                android:text="@string/_menu"
                android:layout_gravity="left"
                android:visibility="gone"
                />
            <Spinner
                android:id="@+id/nearby"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dialog"
                android:prompt="@string/_chooseregion"
                android:entries="@array/nearby"
                android:background="@drawable/border_corner"
                android:visibility="visible"
                 />

               <EditText
                   android:id="@+id/keywords"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:ems="10"
                   android:paddingLeft="10dp"
                   android:textColor="#FFFFFF"
                   android:background="@drawable/border_corner"
                   android:visibility="visible"
                   android:hint="@string/_aroundsearch" >
                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/zwsearchiv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:src="@drawable/search_d"
                android:visibility="visible" />
            
            <Button
                android:id="@+id/searchBtn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/button_corner"
                android:text="@string/_height_search"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                 android:layout_gravity="right"
                android:textColor="@color/white" />
          
            
        </LinearLayout>
    </HorizontalScrollView>
