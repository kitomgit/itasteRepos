<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
            android:id="@+id/tab_nav"
            android:background="@color/themebg"
            >

		  <ImageView
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:layout_alignParentLeft="true"
		      android:layout_alignTop="@+id/menu"
		      android:layout_marginLeft="20dp"
		      android:src="@drawable/topbar_icon_menu" />
     
    <TextView 
        android:id="@+id/tv_topbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/setting"
       android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
       android:src="@drawable/topbar_icon_setting" />

        </RelativeLayout>
