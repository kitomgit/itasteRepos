<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pop"
    android:gravity="center">
    <TableLayout 
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:paddingTop="40dp"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:paddingBottom="10dp"
       >
       <TableRow
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:gravity="left|center_vertical"
       >
       <ImageView 
       android:id="@+id/link_img"
      android:layout_height="40dp"
       android:layout_width="40dp"
       android:src="@drawable/camera"
       android:scaleType="fitCenter"
       
       />
       <TextView 
       android:id="@+id/link_text"
      android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:textSize="14sp"
       android:textColor="#FFFFFF"
       android:text="qq在线"
      />
       </TableRow>
       
       
       
       <TableRow
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:gravity="left|center_vertical"
       >
       <ImageView 
       android:id="@+id/link_img2"
       android:layout_height="40dp"
       android:layout_width="40dp"
       android:src="@drawable/gpsphone2"
       android:scaleType="fitCenter"
       />
       <TextView 
       android:id="@+id/link_text2"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
      android:textSize="14sp"
       android:textColor="#FFFFFF"
       android:text="qq离线"
       />
       </TableRow>
       
       
       <TableRow
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:gravity="left|center_vertical"
       >
       <ImageView 
       android:id="@+id/link_img3"
       android:layout_height="40dp"
       android:layout_width="40dp"
       android:src="@drawable/classics2"
       android:scaleType="fitCenter"
       />
       <TextView 
       android:id="@+id/link_text3"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:textSize="14sp"
        android:textColor="#FFFFFF"
       android:text="qq隐身"
       />
      </TableRow>
      
   </TableLayout>
    
</LinearLayout>
